general {
    markup = "pango"
}

order += "wireless _first_"
order += "battery 1"
order += "cpu_temperature 0"
order += "load"
order += "disk /"
order += "memory"
order += "tztime america"

wireless _first_ {
	format_up = "WIFI: %quality %essid %ip"
	format_down = "WIFI: none none none"
}

battery 1 {
	format = "BAT: %percentage %status"
	format_down = "NONE"
	status_chr = "CHR"
	status_bat = "DIS"
	status_unk = "UNK"
	status_full = "FULL"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
}

cpu_temperature 0 {
	format = "CPU: %degrees Â°C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}

load {
	format = "LOAD: %1min"
}

memory {
	format = "MEM: %free"
}

disk "/" {
	format = "DISK: %free"
}

tztime america {
	format = "%Y-%m-%d %H:%M:%S"
	timezone = "America/New_York"
}
