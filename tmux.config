# TODO consider dropping tmux and using dtach instead
# then would only use sway for windows

# make prefix ctrl+a
unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix

# make tmux work like vi
setw -g mode-keys vi
bind-key -n M-h select-pane -L
bind-key -n M-l select-pane -R
bind-key -n M-k select-pane -U
bind-key -n M-j select-pane -D

# swap windows with ctrl+alt+(left/right)
bind-key -n C-S-left swap-window -t -1
bind-key -n C-S-right swap-window -t +1

# new window in same dir
bind-key C new-window -c "#{pane_current_path}"

# set new default dir
bind-key -n M-c attach-session -c "#{pane_current_path}"

set-window-option -g automatic-rename on
